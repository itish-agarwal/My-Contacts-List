<html>
    <head>
        <title>
            <%= p.name %>
        </title>
        <script src="https://kit.fontawesome.com/ef7b48db01.js" crossorigin="anonymous"></script>
        <link rel = "stylesheet" href = "/css/profile.css">
    </head>
    <body>

        <main>
            <div id = "back-div">
                <a href = "/">
                    <i id="back-arrow" class = "fas fa-arrow-alt-circle-left">
                        
                    </i>
                </a>
            </div>
            <div id = "name-container">
                <span id = "name-div">
                    <%= p.name %>
                </span>
            </div>
            
            <div class="container" id="phone-container">
                <div id = "phone-icon-div">
                    <i class = "fas fa-phone-square-alt">

                    </i>
                    <span id="phone"> Phone </span>
                    <% if(!(p.phone == "-1")) { %>
                        <a class = "edit-tags" id="phone-edit-a" href = "/edit-phone/?id=<%=p.id%>">
                            <i class = "edit fas fa-pencil-alt">
                                
                            </i>
                        </a>
                    <% } %>
                </div>
                <div id = "phone-number-div">
                    <span id="phone-number">
                        <% if(p.phone == "-1") { %>
                            <form id="phone-form" action="/add-phone/?id=<%=p._id%>" method="POST">
                                <input id="phone-input" type="text" name="phone" placeholder="Add phone" required>
                                <button id="submit-btn3" type="submit"> Save </button>
                            </form>
                        <% } else { %>
                            <%= p.phone %>
                        <% } %>
                    </span>
                </div>
            </div>



            <div class="container" id="email-container">
                <div id = "email-icon-div">
                    <i class = "fas fa-envelope">

                    </i>
                    <span id="email"> Email </span>
                    <% if(!(p.email == "-1")) { %>
                        <a class = "edit-tags" id="email-edit-a" href = "/edit-email/?id=<%=p.id%>">
                            <i class = "edit fas fa-pencil-alt">
                                
                            </i>
                        </a>
                    <% } %>
                </div>
                <div id="email-div">
                    <span id="email-id">
                        <% if(p.email == "-1") { %>
                            <form id="email-form" action="/add-email/?id=<%=p._id%>" method="POST">
                                <input id="email-input" type="email" name="email" placeholder="Add email" required>
                                <button id="submit-btn1" type="submit"> Save </button>
                            </form>
                        <% } else { %>
                            <%= p.email %>
                        <% } %>
                    </span>
                </div>
            </div>

            <div class="container" id="address-container">
                <div id = "address-icon-div">
                    <i class = "fas fa-map-marker-alt">

                    </i>
                    <span id = "address"> Address </span>
                    <% if(!(p.address == "-1")) { %> 
                        <a class = "edit-tags" id="address-edit-a" href = "/edit-address/?id=<%=p.id%>">
                            <i class = "edit fas fa-pencil-alt">
                                
                            </i>
                        </a>
                    <% } %>
                </div>
                <div id = "address-div">
                    <span id = "address-id">
                        <% if(p.address == "-1") { %>
                            <form id="address-form" action="/add-address/?id=<%=p._id%>" method="POST">
                                <textarea rows="2" id="address-input" type="text" name="address" placeholder="Add address" required></textarea>
                                <button id="submit-btn2" type="submit"> Save </button>
                            </form>
                        <% } else { %>
                            <%= p.address %>
                        <% } %>

                    </span>
                </div>
            </div>
            

        </main>

        <aside>


        </aside>
        
    </body>
</html>